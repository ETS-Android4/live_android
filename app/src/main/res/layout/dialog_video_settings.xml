<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="564dp"
    android:background="@drawable/dark_fill_half_round_rectangle_bg"
    android:orientation="vertical">

    <View
        android:layout_width="40dp"
        android:layout_height="5dp"
        android:layout_gravity="center"
        android:layout_marginTop="7dp"
        android:background="@drawable/dark_divider_bg" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="14dp"
        android:gravity="start"
        android:text="@string/room_page_settings"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <im.zego.livedemo.feature.live.view.VideoSettingCellView
                android:id="@+id/settings_encode_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                app:cell_view_content="H.264"
                app:cell_view_title="@string/room_page_settings_encode_type"
                app:cell_view_type="text_with_arrow" />

            <im.zego.livedemo.feature.live.view.VideoSettingCellView
                android:id="@+id/settings_layered_coding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                app:cell_view_title="@string/room_page_settings_layered_coding"
                app:cell_view_type="text_with_switch" />

            <im.zego.livedemo.feature.live.view.VideoSettingCellView
                android:id="@+id/settings_hardware_coding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                app:cell_view_title="@string/room_page_settings_hardware_coding"
                app:cell_view_type="text_with_switch" />

            <im.zego.livedemo.feature.live.view.VideoSettingCellView
                android:id="@+id/settings_hardware_decoding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                app:cell_view_title="@string/room_page_settings_hardware_decoding"
                app:cell_view_type="text_with_switch" />

            <im.zego.livedemo.feature.live.view.VideoSettingCellView
                android:id="@+id/settings_background_noise_reduction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                app:cell_view_title="@string/room_page_settings_background_noise_reduction"
                app:cell_view_type="text_with_switch" />

            <im.zego.livedemo.feature.live.view.VideoSettingCellView
                android:id="@+id/settings_echo_cancellation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                app:cell_view_title="@string/room_page_settings_echo_cancellation"
                app:cell_view_type="text_with_switch" />

            <im.zego.livedemo.feature.live.view.VideoSettingCellView
                android:id="@+id/settings_mic_volume_auto_adjustment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                app:cell_view_title="@string/room_page_settings_mic_volume_auto_adjustment"
                app:cell_view_type="text_with_switch" />

            <im.zego.livedemo.feature.live.view.VideoSettingCellView
                android:id="@+id/settings_resolution_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                app:cell_view_content="1080x1920"
                app:cell_view_title="@string/room_page_settings_video_resolution"
                app:cell_view_type="text_with_arrow" />

            <im.zego.livedemo.feature.live.view.VideoSettingCellView
                android:id="@+id/settings_audio_bitrate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                app:cell_view_content="48kbps"
                app:cell_view_title="@string/room_page_settings_audio_bitrate"
                app:cell_view_type="text_with_arrow" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>