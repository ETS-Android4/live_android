<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dark_input_half_round_rectangle_bg"
    android:orientation="horizontal"
    tools:layout_gravity="bottom">

    <ImageView
        android:id="@+id/im_input_send"
        android:layout_width="49dp"
        android:layout_height="49dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:padding="10dp"
        android:src="@drawable/im_send_btn_selector" />


    <EditText
        android:id="@+id/softinput_edittext"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="8dp"
        android:layout_toStartOf="@id/im_input_send"
        android:background="@null"
        android:cursorVisible="true"
        android:hint="Say something..."
        android:maxLength="100"
        android:maxLines="1"
        android:paddingStart="6dp"
        android:paddingEnd="6dp"
        android:textColor="#CCFFFFFF"
        android:textColorHint="#33FFFFFF"
        android:textCursorDrawable="@null"
        android:textSize="14sp"
        tools:text="You're a treasure girl. You have a beautiful voice" />

</RelativeLayout>
